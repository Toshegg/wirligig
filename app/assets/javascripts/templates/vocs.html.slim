                    td 
                      button.btn.btn-warning type="button" ng-class="{hidden: exam.editting}" ng-click="edit_exam(exam)"
                        span.glyphicon.glyphicon-edit aria-hidden="true" 
                      button.btn.btn-success type="button" ng-class="{hidden: !exam.editting}" ng-click="save_exam(exam)"
                        span.glyphicon.glyphicon-ok aria-hidden="true" 
                    td
                      button.btn.btn-danger type="button" ng-click="destroy_exam(exam)"
                        span.glyphicon.glyphicon-remove aria-hidden="true" 

          .col-sm-24
            .form-group.voc-title
              h3 Graduates
              button.btn.btn-success type="button" ng-click="add_graduate()" Add

            .form-group
